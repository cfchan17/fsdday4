<div class="row">
    <div class="col">
        <form method="POST" action="/">
            <div class="form-group row">
                <label for="item" class="col-2 col-form-label">Item:</label>
                <div class="col-10">
                    <input type="text" name="item" id="item" class="form-control" placeholder="Please select an item" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="quantity" class="col-2 col-form-label">Quantity:</label>
                <div class="col-10">
                    <input type="number" name="quantity" id="quantity" class="form-control" min="1" placeholder="Please enter the quantity" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="unitPrice" class="col-2 col-form-label">Unit:</label>
                <div class="col-10">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                $
                            </div>
                        </div>
                        <input type="text" name="unitPrice" id="unitPrice" class="form-control" required>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <input class="btn btn-outline-success" type="submit" value="Add">
            </div>
            <input type="hidden" name="cartState" value="{{ cartState }}">
        </form>
    </div>
</div>
<div class="row mt-5">
    <div class="col">
        <h3>Your Cart</h3>
    </div>
</div>
<div class="row mt-3 border-bottom">
    <div class="col">
        <div class="d-flex justify-content-center">
            <b>Item</b>
        </div>
    </div>
    <div class="col">
        <div class="d-flex justify-content-center">
            <b>Quantity</b>
        </div>
    </div>
    <div class="col">
        <div class="d-flex justify-content-center">
            <b>Price</b>
        </div>
    </div>
</div>
{{#each cart}}
<div class="row mt-2">
    <div class="col">
        <div class="d-flex justify-content-center">
            {{this.item}}
        </div>
    </div>
    <div class="col">
        <div class="d-flex justify-content-center">
            {{this.quantity}}
        </div>
    </div>
    <div class="col">
        <div class="d-flex justify-content-center">
            {{this.unitPrice}}
        </div>
    </div>
</div>

{{else}}
<div class="d-flex justify-content-center mt-5">
        No items in your cart!
</div>
{{/each}}